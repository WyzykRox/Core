
@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
           @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
                        <ul class="navbar-nav">
                            <li>
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fas fa-user-cog"></i> Account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" onclick="$('#logoutForm').submit()" style="cursor: pointer;"><i class="fas fa-sign-out-alt"></i> Logout</a>
                            </li>
                        </ul>
                    </form>
                </li>
            }
            else
            {
                 <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-user-check"></i> Register</a>
                 </li>
                 <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-sign-in-alt"></i> Login</a>
                 </li>
        
            }
 </ul>
